{
  "name": "overpower-deckbuilder",
  "version": "1.0.0",
  "description": "A deckbuilding application for the Overpower card game",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest",
    "clear:database": "ts-node src/scripts/clearDatabase.ts",
    "load:characters": "ts-node src/scripts/loadCharacters.ts",
    "load:specials": "ts-node src/scripts/loadSpecialCards.ts",
    "load:powercards": "ts-node src/scripts/loadPowerCards.ts",
    "generate:images": "ts-node src/scripts/generateCardImages.ts",
    "generate:special-images": "ts-node src/scripts/generateSpecialCardImages.ts",
    "generate:power-images": "ts-node src/scripts/generatePowerCardImages.ts"
  },
  "keywords": ["overpower", "card-game", "deckbuilder", "typescript", "node"],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "ts-node": "^10.9.0",
    "ts-node-dev": "^2.0.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.0"
  }
}

